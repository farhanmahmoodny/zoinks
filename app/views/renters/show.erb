<h1>Welcome Back</h1>

<h2>Name: <%= @renter.name %></h2>
<h2>Address:</h2>
<h2><%= @renter.street %></h2>
<h2><%= @renter.city %>, <%= @renter.state %> <%= @renter.zip %></h2>
<h2>Phone: <%= @renter.phone %></h2>

<h3>Cars you have rented:</h3>

<ul>
  <% @renter.rentals.each do |rent| %>
    <li><%= link_to rent.car.make + " " + rent.car.model, car_path(rent.car) %><br>
      Review: <%= rent.review %>
    </li>
  <% end %>
</ul>
<%= link_to "Edit", edit_renter_path(@renter) %>
<%= link_to "Delete", @renter, method: :delete, data: {confirm: "Are you sure?"} %>
